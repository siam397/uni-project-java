<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="2dp"
    android:elevation="0dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_chat"
    android:id="@+id/chat_item_id">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dp_chat"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/stalin"
        app:civ_border_color="#fff"
        app:civ_border_width="0dp"
        />

    <TextView
        android:id="@+id/name_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/dp_chat"
        android:fontFamily="@font/kievitotextrabold"
        android:gravity="center_horizontal"
        android:text="Friend's Name"
        android:textAllCaps="false"
        android:textColor="#363636"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_chat"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/name_chat"
        android:layout_marginStart="6dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/dp_chat"
        android:ellipsize="end"
        android:fontFamily="@font/kievitotbold"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do"
        android:textAllCaps="false"
        android:textColor="#363636"
        android:textSize="13dp" />

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_below="@+id/dp_chat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@color/ChatColor" />

</RelativeLayout>