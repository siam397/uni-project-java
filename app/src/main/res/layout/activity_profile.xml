<!--        android:id="@+id/logoutbtn"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_alignBottom="@+id/bio"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginBottom="-130dp"-->
<!--        android:text="Logout" />-->

</RelativeLayout>