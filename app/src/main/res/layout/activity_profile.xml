<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="400dp"
        app:civ_border_width="4dp"
        app:civ_border_color="#FFFFFF"
        android:src="@drawable/stalin"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-380dp"
        android:textAllCaps="false"
        android:gravity="center_horizontal"
        android:fontFamily="@font/kievitotextrabold"
        android:textColor="#363636"
        android:textSize="30sp"
        android:text="Md Noman"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:gravity="center"
        android:fontFamily="@font/kievitotitalic"
        android:textColor="#363636"
        android:textSize="24sp"
        android:text="Shobaike Chudi Shobaike Chudi"/>

    <Button
        android:id="@+id/editbtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bio"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/kievitotbold"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="#F5F5F5"
        android:textSize="24sp"
        app:backgroundTint="#9E6BCB" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#F5F5F5"
        app:srcCompat="@drawable/arrowleft" />

