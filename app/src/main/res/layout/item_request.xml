<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:elevation="2dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_friend"
    android:id="@+id/request_item_id">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dp_request"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/stalin"
        app:civ_border_color="#fff"
        app:civ_border_width="0dp"
        />

    <TextView
        android:id="@+id/name_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dp_request"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/kievitotextrabold"
        android:gravity="center_horizontal"
        android:text="Friend's Name"
        android:textAllCaps="false"
        android:textColor="#363636"
        android:textSize="24dp" />



<!--    <View-->
<!--        android:layout_width="360dp"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_below="@+id/dp_request"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginBottom="0dp"-->
<!--        android:background="@color/ChatColor" />-->

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_request"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_check"
        android:elevation="5dp"
        app:backgroundTint="#45DC2A" />

    <Button
        android:id="@+id/btn_reject"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_request"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_close"
        android:elevation="5dp"
        app:backgroundTint="#FA3A3A" />


</RelativeLayout>